<body>
  <h1>Financeiro Pessoal Avan√ßado</h1>
  <div class="container">
    <form id="form">
      <input type="text" id="descricao" placeholder="Descri√ß√£o" required />
      <input type="number" id="valor" placeholder="Valor (negativo = despesa)" required />
      <input type="date" id="data" required />
      <select id="categoria" required>
        <option value="" disabled selected>Categoria</option>
        <option value="Alimenta√ß√£o">Alimenta√ß√£o</option>
        <option value="Transporte">Transporte</option>
        <option value="Lazer">Lazer</option>
        <option value="Sal√°rio">Sal√°rio</option>
        <option value="Outros">Outros</option>
      </select>
      <button type="submit">Adicionar Transa√ß√£o</button>
    </form>

    <div class="saldo" id="saldo">Saldo: R$ 0,00</div>

    <div class="filtros">
      <input type="date" id="filtroInicio" />
      <input type="date" id="filtroFim" />
      <button onclick="aplicarFiltro()">üîç Filtrar</button>
    </div>

    <div class="botoes">
      <button onclick="imprimirRelatorio()">üñ®Ô∏è Imprimir</button>
      <button onclick="exportarCSV()">‚¨áÔ∏è Exportar CSV</button>
      <button onclick="limparTransacoes()">üóëÔ∏è Limpar Tudo</button>
      <button onclick="alternarTema()">üåì Tema</button>
    </div>

    <table>
      <thead>
        <tr>
          <th>Data</th>
          <th>Descri√ß√£o</th>
          <th>Categoria</th>
          <th>Valor</th>
        </tr>
      </thead>
      <tbody id="lista-transacoes"></tbody>
    </table>

    <canvas id="graficoLinha" style="max-height:300px;"></canvas>
    <canvas id="graficoBarra" style="max-height:300px;"></canvas>
  </div>

  <script>
    const form = document.getElementById("form");
    const lista = document.getElementById("lista-transacoes");
    const saldo = document.getElementById("saldo");

    const filtroInicio = document.getElementById("filtroInicio");
    const filtroFim = document.getElementById("filtroFim");

    const graficoLinhaCtx = document.getElementById("graficoLinha").getContext("2d");
    const graficoBarraCtx = document.getElementById("graficoBarra").getContext("2d");
    let graficoLinha, graficoBarra;

    let transacoes = JSON.parse(localStorage.getItem("transacoes")) || [];

    function salvar() {
      localStorage.setItem("transacoes", JSON.stringify(transacoes));
    }

    function atualizarTela(filtradas = transacoes) {
      lista.innerHTML = "";
      let total = 0, receitas = 0, despesas = 0;
      filtradas.forEach(t => {
        const tr = document.createElement("tr");
        const valorFormatado = t.valor.toLocaleString("pt-BR", { style: "currency", currency: "BRL" });
        tr.innerHTML = `
          <td>${t.data}</td>
          <td>${t.descricao}</td>
          <td>${t.categoria}</td>
          <td class="${t.valor >= 0 ? 'positivo' : 'negativo'}">${valorFormatado}</td>
        `;
        lista.appendChild(tr);
        total += t.valor;
        if (t.valor >= 0) receitas += t.valor;
        else despesas += Math.abs(t.valor);
      });

      saldo.textContent = `Saldo: ${total.toLocaleString("pt-BR", { style: "currency", currency: "BRL" })}`;
      saldo.className = "saldo " + (total >= 0 ? "positivo" : "negativo");

      atualizarGraficoAvancado(filtradas);
      salvar();
    }

    function atualizarGraficoAvancado(transacoesFiltradas) {
      // Gr√°fico de linha: saldo acumulado ao longo do tempo
      const ordenadas = [...transacoesFiltradas].sort((a,b) => new Date(a.data) - new Date(b.data));
      let saldoAcumulado = 0;
      const labelsLinha = [];
      const dadosLinha = [];

      ordenadas.forEach(t => {
        saldoAcumulado += t.valor;
        labelsLinha.push(t.data);
        dadosLinha.push(saldoAcumulado);
      });

      if (graficoLinha) graficoLinha.destroy();
      graficoLinha = new Chart(graficoLinhaCtx, {
        type: 'line',
        data: {
          labels: labelsLinha,
          datasets: [{
            label: 'Saldo Acumulado',
            data: dadosLinha,
            borderColor: '#3b82f6',
            backgroundColor: 'rgba(59,130,246,0.2)',
            fill: true,
            tension: 0.3,
            pointRadius: 4,
            pointHoverRadius: 6
          }]
        },
        options: {
          responsive: true,
          scales: {
            x: {
              type: 'time',
              time: { unit: 'day', tooltipFormat: 'dd/MM/yyyy' },
              title: { display: true, text: 'Data' }
            },
            y: {
              title: { display: true, text: 'Saldo (R$)' },
              beginAtZero: true
            }
          },
          plugins: { legend: { display: true, position: 'top' } }
        }
      });

      // Gr√°fico de barras: total por categoria
      const totaisCategoria = {};
      transacoesFiltradas.forEach(t => {
        totaisCategoria[t.categoria] = (totaisCategoria[t.categoria] || 0) + t.valor;
      });

      const labelsBarra = Object.keys(totaisCategoria);
      const dadosBarra = labelsBarra.map(cat => totaisCategoria[cat]);

      if (graficoBarra) graficoBarra.destroy();
      graficoBarra = new Chart(graficoBarraCtx, {
        type: 'bar',
        data: {
          labels: labelsBarra,
          datasets: [{
            label: 'Total por Categoria',
            data: dadosBarra,
            backgroundColor: dadosBarra.map(v => v >= 0 ? '#4caf50' : '#f44336')
          }]
        },
        options: {
          responsive: true,
          scales: {
            y: {
              beginAtZero: true,
              title: { display: true, text: 'Valor (R$)' }
            }
          },
          plugins: { legend: { display: false } }
        }
      });
    }

    function aplicarFiltro() {
      const inicio = filtroInicio.value;
      const fim = filtroFim.value;
      const filtradas = transacoes.filter(t => {
        return (!inicio || t.data >= inicio) && (!fim || t.data <= fim);
      });
      atualizarTela(filtradas);
    }

    function exportarCSV() {
      let csv = "Data,Descri√ß√£o,Categoria,Valor\n";
      transacoes.forEach(t => {
        csv += `${t.data},"${t.descricao}",${t.categoria},${t.valor}\n`;
      });
      const blob = new Blob([csv], { type: 'text/csv' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = "financeiro.csv";
      a.click();
    }

    function imprimirRelatorio() {
      window.print();
    }

    function limparTransacoes() {
      if (confirm("Deseja apagar tudo?")) {
        transacoes = [];
        salvar();
        atualizarTela();
      }
    }

    function alternarTema() {
      document.body.classList.toggle("dark-mode");
    }

    form.addEventListener("submit", (e) => {
      e.preventDefault();
      const descricao = document.getElementById("descricao").value.trim();
      const valor = parseFloat(document.getElementById("valor").value);
      const data = document.getElementById("data").value;
      const categoria = document.getElementById("categoria").value;

      if (!descricao || isNaN(valor) || !data || !categoria) return;

      transacoes.push({ descricao, valor, data, categoria });
      form.reset();
      atualizarTela();
    });

    atualizarTela();
  </script>
</body>
</html>
